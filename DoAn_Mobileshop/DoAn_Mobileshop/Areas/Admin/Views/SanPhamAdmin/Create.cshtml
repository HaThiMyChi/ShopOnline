@model MobileShopConnection.SanPham
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "SanPhamAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table style="width: 80%; margin: auto;">
        <tr>
            <td>Mã sản phẩm</td>
            <td><input style="width: 300px; float:left; height: 35px" maxlenght="11" type="text" name="MaSanPham"/></td>
            <td rowspan="8">
                <div>
                    <img id="target" class="img" src="#" alt="your image" style="float:right; width: 320px; height:300px"/>
                </div>
            </td>
        </tr>
        <tr>
            <td>Tên sản phẩm</td>
            <td><input style="width: 300px; float:left; height:35px" type="text" name="TenDienThoai" maxlength="11" /></td>

        </tr>
        <tr>
           <td>Mô tả</td> 
            <td>
                <input style="width: 300px; float: left; height: 35px" type="text" name="MoTa" />
            </td>
        </tr>
        <tr>
            <td>Xuất xứ</td>
            <td>
                <select name="XuatXua" style="float: left; width: 300px; height: 35px; background-color: #5d5e63;">
                    <option value="0" selected>Chưa khóa</option>
                    <option value="1">Đã khóa</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Mã loại điện thoại</td>
            <td>
           @*     @Html.DropDownList("MaLoaiDienThoai", null, new { @style = "float:left; width: 300px; height: 35px;" });*@

            </td>
        </tr>
        <tr>
            <td>Giá bán</td>
            <td>
                <input style="width: 300px; float: left; height:35px" type="number" name="GiaBan" />
            </td>
        </tr>

        
        <tr>
            <td>Hình ảnh</td>
            <td><input type="file" id="file_Hinh" name="HinhAnh" onchange="previewfile();" style="float:left"/></td>
         </tr>
        <tr>
            <td>Nhà sản xuất</td>
            <td>
                @*@Html.DropDownList("MaNhaSanXuat", null, new { @style = "float:left; width: 400px; height: 35px;" });*@
            </td>
        </tr>
        <tr>
            <td style="width: 300px;">Cấu hình</td>
            <td colspan="2" >@*<textarea class="ckeditor" name="CauHinh" style="width: 400px; height: 150px; max-width: 100px; max-height: 600px;" rows="4" cols="30"></textarea>*@</td>
        </tr>

   

    </table>
}
